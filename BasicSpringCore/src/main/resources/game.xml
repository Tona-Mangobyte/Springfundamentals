<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="game" class="org.example.game.BaseballGame">
        <constructor-arg name="homeTeam" ref="redSox" />
        <constructor-arg name="awayTeam" ref="cubs" />
    </bean>
    <bean id="cubs" class="org.example.game.Cubs" />
    <bean id="redSox" class="org.example.game.RedSox" />
</beans>